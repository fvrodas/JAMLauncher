<resources>
    <!-- Base application theme. -->
    <style name="Theme.JustAnotherMinimalLauncher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/translucent_black</item>
        <item name="colorSecondaryVariant">@color/translucent_black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/translucent_black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.JustAnotherMinimalLauncher.Main" parent="Theme.JustAnotherMinimalLauncher">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="Theme.JustAnotherMinimalLauncher.Settings" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/translucent_black</item>
        <item name="colorSecondaryVariant">@color/translucent_black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/translucent_black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.JustAnotherMinimalLauncher.BottomSheet" parent="Theme.JustAnotherMinimalLauncher">
        <item name="android:background">@android:color/background_dark</item>
    </style>

    <style name="Theme.JustAnotherMinimalLauncher.ImageView" parent="Theme.JustAnotherMinimalLauncher">
        <item name="android:tint">@android:color/white</item>
        <item name="android:tintMode">src_atop</item>
    </style>

    <style name="Theme.JustAnotherMinimalLauncher.ShortcutItem" parent="Theme.JustAnotherMinimalLauncher">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.JustAnotherMinimalLauncher.NotificationIndicator" parent="Theme.JustAnotherMinimalLauncher">
        <item name="android:tint">@android:color/white</item>
        <item name="android:tintMode">multiply</item>
    </style>
</resources>