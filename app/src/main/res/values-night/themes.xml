<resources>
    <!-- Base application theme. -->
    <style name="Theme.Default" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorPrimaryVariant">@color/dark_background</item>
        <item name="colorOnPrimary">@color/light_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_background</item>
        <item name="colorSecondaryVariant">@color/light_background</item>
        <item name="colorOnSecondary">@color/dark_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/translucent_black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/light_background</item>
        <item name="searchViewStyle">@style/Theme.Default.SearchView</item>
        <item name="recyclerViewStyle">@style/Theme.Default.BottomSheet</item>
        <item name="actionBarStyle">@style/Theme.Default.ActionBar</item>
    </style>

    <style name="Theme.Default.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/dark_background</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.Default.BottomSheet" parent="Theme.Default">
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="Theme.Default.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="Theme.Default.NotificationIndicator" parent="Theme.Default">
        <item name="android:tint">@android:color/white</item>
        <item name="android:tintMode">multiply</item>
    </style>

    <!-- Gruvbox Theme -->
    <style name="Theme.Gruvbox" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_bg_gruvbox</item>
        <item name="colorPrimaryVariant">@color/dark_bg_gruvbox</item>
        <item name="colorOnPrimary">@color/dark_text_gruvbox</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_accent_gruvbox</item>
        <item name="colorSecondaryVariant">@color/dark_accent_gruvbox</item>
        <item name="colorOnSecondary">@color/dark_bg_gruvbox</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/translucent_black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/dark_text_gruvbox</item>
        <item name="android:textColorPrimary">@color/dark_text_gruvbox</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary_gruvbox</item>
        <item name="searchViewStyle">@style/Theme.Gruvbox.SearchView</item>
        <item name="recyclerViewStyle">@style/Theme.Gruvbox.BottomSheet</item>
        <item name="actionBarStyle">@style/Theme.Gruvbox.ActionBar</item>
    </style>

    <style name="Theme.Gruvbox.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextColor">@color/dark_text_gruvbox</item>
        <item name="android:textColorPrimary">@color/dark_text_gruvbox</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary_gruvbox</item>
        <item name="background">@color/dark_bg_gruvbox</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.Gruvbox.BottomSheet" parent="Theme.Gruvbox">
        <item name="android:background">@color/dark_bg_gruvbox</item>
    </style>

    <style name="Theme.Gruvbox.SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:background">@color/dark_bg_gruvbox</item>
    </style>
</resources>