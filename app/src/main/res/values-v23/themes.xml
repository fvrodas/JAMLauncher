<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Nord" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_bg_nord</item>
        <item name="colorPrimaryVariant">@color/light_bg_nord</item>
        <item name="colorOnPrimary">@color/light_text_nord</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_accent_nord</item>
        <item name="colorSecondaryVariant">@color/light_accent_nord</item>
        <item name="colorOnSecondary">@color/light_bg_nord</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/translucent_light_nord</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/light_text_nord</item>
        <item name="android:textColorPrimary">@color/light_text_nord</item>
        <item name="android:textColorSecondary">@color/light_text_secondary_nord</item>
        <item name="bottomSheetStyle">@style/Theme.Nord.BottomSheet</item>
        <item name="searchViewStyle">@style/Theme.Nord.SearchView</item>
        <item name="recyclerViewStyle">@style/Theme.Nord.BottomSheet</item>
        <item name="actionBarStyle">@style/Theme.Nord.ActionBar</item>
        <item name="actionBarTheme">@style/Theme.Nord.ThemeOverlay</item>
    </style>

